<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
            <div class="row">
                <div class="input-field col s12 center">
                    <img src="{{ asset('assets/images/logo.png') }}" alt="" class="circle responsive-img valign profile-image-login">
                    <p class="center login-form-text">El coso rojo</p>
                </div>
            </div>

            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="mdi-social-person-outline prefix"></i>
                    <input id="username" type="text" name="_username" value="{{ last_username }}" required="required">
                    <label for="username" class="center-align">{{ 'security.login.username'|trans }}</label>
                </div>
            </div>
            <div class="row margin">
                <div class="input-field col s12">
                    <i class="mdi-action-lock-outline prefix"></i>
                    <input type="password" id="password" name="_password" required="required" />
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12 m12 l12  login-text">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember-me">{{ 'security.login.remember_me'|trans }}</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input class="btn red col s12" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />

                    {#<a href="index.html" class="btn waves-effect waves-light col s12">   {{ 'security.login.submit'|trans }}</a>#}
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6 m6 l6">
                    <p class="margin medium-small"><a href="{{ path('fos_user_registration_register') }}">Registrate ahora!</a></p>
                </div>
                <div class="input-field col s6 m6 l6">
                    <p class="margin right-align medium-small"><a href="{{ path('fos_user_resetting_request') }}">Forgot password ?</a></p>
                </div>
            </div>

        </form>
    </div>
</div>