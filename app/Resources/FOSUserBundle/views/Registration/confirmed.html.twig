{#{% extends "FOSUserBundle::layout.html.twig" %}#}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

<div id="login-page" class="row">
    <div class="col s10 offset-s1 z-depth-4 card-panel ">

        <div class="row">
            <div class="input-field col s12 center">
                <img src="{{ asset('assets/images/logo.png') }}" alt="" class="circle responsive-img valign profile-image-login">
                <p class="center login-form-text">El coso rojo</p>
            </div>
        </div>


        <div class="row margin">
            <div class="input-field col s12">
                <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
                {% if targetUrl %}
                    <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
                {% endif %}


            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <a href="{{ path('homepage') }}" class="btn red col s6 offset-s3">Continuar</a>
            </div>
        </div>

    </div>
</div>
{% endblock fos_user_content %}