{% trans_default_domain 'FOSUserBundle' %}

<div id="login-page" class="row">
    <div class="col s12 z-depth-4 card-panel">
        {#<div class="row">#}
            {##}
        {#</div>#}
        <div class="input-field col s12 center">
            <img src="{{ asset('assets/images/logo.png') }}" alt="" class="circle responsive-img valign profile-image-login">
            <p class="center login-form-text">El coso rojo</p>
        </div>
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        <div class="row">
            <div class="input-field col s12 center">
                <h4>Registracion</h4>
                <p class="center">Únete a nuestra comunidad ahora!</p>
            </div>
        </div>

        {{ form_widget(form) }}
        <div class="row">
            <div class="input-field col s12">
                <input class="btn red col s12" type="submit" value="{{ 'registration.submit'|trans }}" />

            </div>
            <div class="input-field col s12">
                <p class="margin center medium-small sign-up">
                    ¿Ya tienes una cuenta? <a href="{{ path('fos_user_security_login')}}">Entra</a></p>
            </div>
        </div>
            <div>
            </div>
        {{ form_end(form) }}
    </div>
</div>


