{% extends 'base.html.twig' %}
        {% block stylesheets %}
            <link rel="stylesheet"  href="{{ asset('assets/css/materialize.css') }}" />
            <link rel="stylesheet"  href="{{ asset('assets/css/style.css') }}" />
            <link rel="stylesheet"  href="{{ asset('assets/css/prism.css') }}" />
            {#<link rel="stylesheet"  href="{{ asset('assets/css/page-center.css') }}" />#}


        {% endblock %}

{% block body %}
    <div id="espacio"></div>

    <h4 class="header center">Mis turnos</h4>
    <div class="divider"></div>
    <div id="card-reveal " class="section ">
        <div class="row ">

                <div class="col s6 m8 offset-l2 l8">

                    <div class="row">




                                <table class="striped centered">
                                    <thead>
                                    <tr>
                                        {#<th>Id</th>#}
                                        <th>Fecha</th>
                                        <th>Hora</th>
                                        <th>Cancelar</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for reserva in turnos %}
                                        <tr>
                                            {#<td><a href="{{ path('user_reserva_show', { 'id': reserva.id }) }}">{{ reserva.id }}</a></td>#}
                                            {#<td>{{ reserva.resFecha }}</td>#}
                                            <td>{% if reserva.resFecha %}{{ reserva.resFecha|date('d-m-y') }}{% endif %}</td>

                                            <td>{% if reserva.resHora %}{{ reserva.resHora|date('H:i:s') }}{% endif %}</td>
                                            <td>
                                                <ul>
                                                    <li>
                                                        <a href="{{ path('user_reserva_show', { 'id': reserva.id }) }}">Cancelar</a>
                                                    </li>

                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                    </div>
                </div>

        </div>
    </div>





    {% block javascripts %}
        <script src="{{ asset('assets/js/jquery-1.11.2.min.js') }}"></script>

        <script src="{{ asset('assets/js/materialize.js') }}"></script>
    {% endblock %}
{% endblock %}
